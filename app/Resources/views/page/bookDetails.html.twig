{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
{% endblock %}

{% block container %}
    {{ parent() }}
    {% if book is empty %}
        <div class="row">
            <div class="col-lg-12">
                <h2>Ogłoszenie nie istnieje, prawdopodobnie zostało już usunięte.</h2>
            </div>
        </div>
    {% else %}
       <div class="row">
        <div class="col-md-8 col-sm-7 book-images">
            {% set numberOfImages = images|length %}
            {% if numberOfImages == 1 %}
                <div class="panel panel-default">
                    <div class="panel-body">
                        <img src="{{ asset('images/') }}{{ images[0]['name'] }}" class="img-responsive book-img-half">
                    </div>
                </div>
            {% endif %}
            
            {% if numberOfImages == 2 %}
                <div class="col-xs-6 book-img-left">
                    <div class="panel panel-default">
                        <div class="panel-body">
                            <img src="{{ asset('images/') }}{{ images[0]['name'] }}" class="img-responsive book-img-half">
                        </div>
                    </div>
                </div>
                <div class="col-xs-6 book-img-right">
                    <div class="panel panel-default">
                        <div class="panel-body">
                            <img src="{{ asset('images/') }}{{ images[1]['name'] }}" class="img-responsive book-img-half">
                        </div>
                    </div>
                </div>
            {% endif %}
            
            {% if numberOfImages == 3 %}
                <div class="col-xs-6 book-img-left">
                    <div class="panel panel-default">
                        <div class="panel-body">
                            <img src="{{ asset('images/') }}{{ images[0]['name'] }}" class="img-responsive book-img-half">
                        </div>
                    </div>
                </div>
                <div class="col-xs-6 book-img-right">
                    <div class="panel panel-default" style='margin-bottom: 4px;'>
                        <div class="panel-body">
                            <img src="{{ asset('images/') }}{{ images[1]['name'] }}" class="img-responsive book-img-quarter">
                        </div>
                    </div>
                    <div class="panel panel-default">
                        <div class="panel-body">
                            <img src="{{ asset('images/') }}{{ images[2]['name'] }}" class="img-responsive book-img-quarter">
                        </div>
                    </div>
                </div>
            {% endif %}
              
        </div>

        <div class="col-md-4 col-sm-5">
            <p class="book-price">{{ book['price']|number_format }}&nbsp;zł</p>
            <p class="book-name">{{ book['name'] }}</p>
            <p class="book-author">{{ book['author'] }}</p>
            <p class="book-description">{{ book['description'] }}</p>
            <button type='button' onclick="location.href='#';" class='btn btn-default ask-button'>Zapytaj o książkę</button>
            <button type='button' onclick="location.href='#';" class='btn btn-default to-favourite-button'>Dodaj do ulubionych</button>
            <p class="book-email">Email: {{ book['email'] }}</p>
            {% if book['phone'] %}
                <p>Telefon: {{ book['phone'] }}</p>
            {% endif %}
        </div>
    </div>    
            
    <div class="row">
        <div class="col-lg-12">
        </div>
    </div>
    {% endif %}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    
{% endblock %}