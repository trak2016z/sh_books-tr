{% extends 'base.html.twig' %}

{% block container %}
    {{ parent() }}
    <div class="row">
        {% if books is empty %}
            <h2>Brak wynik√≥w</h2>
        {% else %}
            {% for book in books %}    
                <div class="col-lg-3 col-md-4 col-sm-5 col-xs-6">
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <p>{{ book['name'] }}</p>
                            <p>{{ book['author'] }}</p>
                        </div>
                        <div class="panel-body books-img">
                            <a href="{{ path("bookDetails", {'id' : book['id']}) }}" title="{{ book['description'] }}">
                                <img src="{{ asset('images/') }}{{ booksImage[book['id']] }}" class="img-responsive">
                            </a>
                        </div>
                        <div class="panel-footer">
                            {{ book['price']|number_format }}
                        </div>
                    </div>
                </div>
            {% endfor %}
        {% endif %}
    </div>
{% endblock %}